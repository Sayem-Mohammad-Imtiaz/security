nodePrint: output collection of string;
count:int=0;
count1:int=0;
count2:int=0;
count3:int=0;
tempCall:set of string;
tempCallBase:map[int] of string;
OutertempCall:set of string;
flag1: bool=false;
flag2: bool=false;
